<%= form_for(@contact, {url: contact_path, method: :post}) do |f| %>

  <%= has_errors?(@contact) %>

  <div class="field">
   <div class='col-md-6'>
    <%= f.label :name %>
    <div class='input-group'>
    <div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
    <%= f.text_field :name, class: 'form-control', required: 'required',
    placeholder: 'Digite o nome', autocomplete: 'off' %>
   </div>
  </div>
  <div class="field">
   <div class='col-md-6'>
     <%= f.label :email %>
     <div class='input-group'>
     <div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
     <%= f.email_field :email, class: 'form-control', required: 'required',
     placeholder: 'Digite o e-mail', autocomplete: 'off' %>
     </div>
   </div>
  </div>
  <div class="field">
   <div class='col-md-12'>
      <%= f.label :subject %>
      <div class='input-group'>
      <div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
      <%= f.text_field :subject, class: 'form-control', required: 'required',
      placeholder: 'Digite o assunto', autocomplete: 'off' %>
      </div>
    </div>
  </div>
  <div class="field">
   <div class='col-md-12'>
    <%= f.label :message %>
    <%= f.text_area :message, class: 'form-control', required: 'required',
    placeholder: 'Escreva a mensagem', autocomplete: 'off' %>
   </div>
  </div>
  <div class="field">
   <div class='col-md-12'><br>
    <%= f.submit 'Enviar Mensagem', class: 'btn btn-primary btn-lg top' %>
   </div>
  </div>
<% end %>
