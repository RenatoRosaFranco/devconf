<section id='help'>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
          <ul class='list-unstyled'>
            <li><h2><i class='glyphicon glyphicon-search'></i> PATROCINADORES</h2></li>
            <li><p>Acompanhe os patrocinadores do evento.</p></li>
            <li><hr></li>
          </ul>

          <% (1..12).each do %>
          <% Partner.all.each do |partner| %>
           <div class="col-md-2">
              <div class='padding'>
               <%= link_to partner.link
                   image_tag(partner.logo, width: '120', height: '60',
                     style: 'margin-bottom: 30px;') %>
              </div>
           </div>
            <% end %>
          <% end %>

          <%= has_records?(Partner.all) %>

      </div>
    </div>
  </div>
</section>

<div id="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ul class='list-unstyled text-center'>
           <li><h2><i class='glyphicon glyphicon-search'></i> CONTATO</h2></li>
           <li><p>Envie nos uma mensage, responderemos o mais rápido possivel.</p></li>
           <li><hr></li>
        </ul>
       <%= render partial: 'contact/form' %>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'layouts/footer' %>
